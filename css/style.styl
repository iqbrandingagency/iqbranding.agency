	body
		font-size 14px

	.container
		padding 0 1em

	#logo #wsite-title
		font-size 1.5em !important

	#banner-wrap .container
		padding 0 30px

	.landing-page #banner
		height 350px
	
	#banner
		font-size 12px
		h2
			font-size 2.5em !important
		p
			font-size 1.25em !important
